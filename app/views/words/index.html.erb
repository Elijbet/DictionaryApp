

<!-- flex band -->

<% @words.each do |word| %>
<div class="band">
  <div class="two centered">
    <h5><%= link_to "#{word.word}", word %></h5>
    <p class="attribute"><%= word.user.first_name %> <%= word.user.last_name %>, <%= word.created_at.strftime("%-m/%-d/%-y") %> </p>
    
    <%= link_to new_word_definition_path(word) do %>
      <i class="fa fa-plus-square-o fa-lg" aria-hidden="true"></i>
    <% end %>

  </div>
  <div class="three">

    <%#= will_paginate word.definitions %>

      <% word.definitions.first(2).each do |definition| %>
        <div class="three-b">

          <div class="votes centered">   
          
            <!-- voting functionality -->
            <div>

              <p><%= link_to like_word_definition_path(word, definition), method: :put do %>
                <i class="fa fa-arrow-up fa-lg" aria-hidden="true"></i>
              <% end %></p>
              
              <p><%= definition.get_upvotes.size %></p>
              
              <p><%= link_to dislike_word_definition_path(word, definition), method: :put do %>
                <i class="fa fa-arrow-down fa-lg" aria-hidden="true"></i>
              <% end %></p>

            </div>
            <!-- end of voting functionality -->

          </div>

          <div class="definitions">
              <h5><%= definition.definition %></h5>
              <p class="attribute"><%= definition.user.first_name %> <%= definition.user.last_name %>, Submitted <%= time_ago_in_words(definition.created_at) %> ago. </p>
              <div class="honeycomb"></div>
          </div>
        </div>
      
      <% end %>
    
        <div class="three-b">
          <div class="votes">
          </div>
          <div class="definitions">
            <h5><%= link_to 'Complete List of Definitions', word_path(word) %></h5>
          </div>
        </div>
    <%#= will_paginate word.definitions %>

  </div>

</div>

<!-- end of flex band -->
<% end %>

<p><%= will_paginate @words %></p>

<%= link_to 'New Word', new_word_path %>

